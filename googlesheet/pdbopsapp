    <head>
        <base target="_self">
        <script>
            function submitForm() {
                const formData = {
                    name: document.getElementsByName('name').value,
                    email: document.getElementsByName('email').value,
                    gender: document.getElementsByName('gender').value,
                    field_work: document.getElementsByName('field_work').value,
                    hope_service: document.getElementsByName('hope_service').value,
                    area_service: document.getElementsByName('area_service').value,
                    date_service: document.getElementsByName('date_service').value,
                    select_service: document.getElementsByName('select_service').value,
                    more_service: document.getElementsByName('more_service').value,
                    remarks: document.getElementsByName('remarks').value
                };

                google.script.run.withSuccessHandler(function(response) {
                    document.getElementById('response').innerHTML = response;
                }).submitFormData(formData);

                return false;
            }
        </script>
    </head>
