        <script>
            function submitForm() {
                const formData = {
                    name: document.querySelector('input[id="name"]').value,
                    email: document.querySelector('input[id="email"]').value,
                    gender: document.querySelector('input[name="gender"]:checked') ? document.querySelector('input[name="gender"]:checked').value : '',
                    fieldWork: document.querySelector('input[id="fieldwork"]').value,
                    hopeService: document.querySelector('textarea[id="hopeservice"]').value,
                    areaService: document.querySelector('input[id="areaservice"]').value,
                    dateService: document.querySelector('input[id="dateservice"]').value,
                    selectService: Array.from(document.querySelectorAll('input[name="selectservice"]:checked')).map(el => el.value),
                    moreService: document.querySelector('textarea[id="moreservice"]').value,
                    remarks: Array.from(document.querySelectorAll('input[name="remark"]:checked')).map(el => el.value)
                };

                console.log(formData);

                google.script.run.withSuccessHandler(function(response) {
                    document.getElementById('response').innerHTML = response;
                    document.querySelector('form').reset();
                }).submitFormData(formData);

                return false;
            }
        </script>
    </head>
    <body>
        <h1>pdbops.com 컨설팅 서비스 신청폼</h1>

        <form onsubmit="return submitForm();">
