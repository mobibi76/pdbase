        <script>
            function submitForm() {
                const formData = {
                    name: document.querySelector('input[id="name"]').value,
                    email: document.querySelector('input[id="email"]').value,
                    gender: document.querySelector('input[id="gender"]:checked') ? document.querySelector('input[id="gender"]:checked').value : '',
                    field_work: document.querySelector('input[id="field_work"]').value,
                    hope_service: document.querySelector('textarea[id="hope_service"]').value,
                    area_service: document.querySelector('input[id="area_service"]').value,
                    date_service: document.querySelector('input[id="date_service"]').value,
                    select_service: Array.from(document.querySelectorAll('input[id="select_service"]:checked')).map(el => el.value),
                    more_service: document.querySelector('textarea[id="more_service"]').value,
                    remarks: Array.from(document.querySelectorAll('input[id="remarks"]:checked')).map(el => el.value)
                };

                console.log(formData);

                google.script.run.withSuccessHandler(function(response) {
                    document.getElementById('response').innerHTML = response;
                }).submitFormData(formData);

                return false;
            }
        </script>
    </head>
