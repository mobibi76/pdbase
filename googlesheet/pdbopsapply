<!DOCTYPE html>
<html>
    <head>
        <base target="_self">
        <script>
            function submitForm() {
                const formData = {
                    name: document.querySelector('input[name="name"]').value,
                    email: document.querySelector('input[name="email"]').value,
                    gender: document.querySelector('input[name="gender"]:checked').value,
                    field_work: document.querySelector('input[name="field_work"]').value,
                    hope_service: document.querySelector('textarea[name="hope_service"]').value,
                    area_service: document.querySelector('input[name="area_service"]').value,
                    date_service: document.querySelector('input[name="date_service"]').value,
                    select_service: Array.from(document.querySelectorAll('input[name="select_service"]:checked')).map(el => el.value),
                    more_service: document.querySelector('textarea[name="more_service"]').value,
                    remarks: Array.from(document.querySelectorAll('input[name="remarks"]:checked')).map(el => el.value)
                };

                google.script.run.withSuccessHandler(function(response) {
                    document.getElementById('response').innerHTML = response;
                }).submitFormData(formData);

                return false;
            }
        </script>
    </head>
    <body>
        <h1>컨설팅 서비스 신청</h1>

        <form onsubmit="return submitForm();">
